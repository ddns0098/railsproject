<!DOCTYPE html>
<html>
  <head>
    <title>Huli</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' =>
        true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <% if admin_signed_in? %>
        <%= link_to "Home", admin_path, class: "navbar-brand" %>
        <% else %>
        <%= link_to "Home", root_path, class: "navbar-brand" %>
        <% end %>
      </div>
      <ul class="nav navbar-nav">
        <% if admin_signed_in? && request.env['PATH_INFO'] != "/" %>
          <li><%= link_to "Sign Out", destroy_admin_session_path, method: :delete %></li>
          <li><%= link_to "Add Project", new_project_path %></li>
        <% else %>
          <li><%= link_to "Log In", new_admin_session_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
